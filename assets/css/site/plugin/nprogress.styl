#nprogress
  pointer-events: none
  &:before
    content: ""
    position: fixed
    top: 0
    left: 0
    right: 0
    height: 2px
    background: #ccc
    animation: fade .5s
    animation-fill-mode: both
  .bar
    background: colors.bg
    position: fixed
    z-index: 1031
    top: 0
    left: 0
    width: 100%
    height: 2px
  .peg
    display: block
    position: absolute
    right: 0px
    width: 100px
    height: 100%
    box-shadow: 0 0 10px colors.bg, 0 0 5px colors.bg
    opacity: 1.0
    transform: rotate(3deg) translate(0px, -4px)
    display: none
  .spinner
    display: block
    position: fixed
    z-index: 1031
    top: 0
    right: 0
    bottom: 0
    left: 0
  .spinner-icon
    width: 40px
    height: 40px
    box-sizing: border-box
    border: solid 2px transparent
    border-top-color: colors.bg
    border-left-color: colors.bg
    border-radius: 50%
    animation: nprogress-spinner 400ms linear infinite
    margin: auto
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0

.nprogress-custom-parent
  overflow: hidden
  position: relative

.nprogress-custom-parent #nprogress .spinner
.nprogress-custom-parent #nprogress .bar
  position: absolute

.loader
  display: inline-block
  width: 30px
  height: 30px
  box-sizing: border-box
  border: solid 1px transparent
  border-top-color: colors.bg
  border-left-color: colors.bg
  border-radius: 50%
  animation: nprogress-spinner 400ms linear infinite

@keyframes fade
  0%
    opacity: 0
  100%
    opacity: 1

@keyframes nprogress-spinner
  0%
    transform: rotate(0deg)
  100%
    transform: rotate(360deg)