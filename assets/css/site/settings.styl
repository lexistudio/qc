//Размеры
sizes.vertical-step = 9px  // вертикальный ритм

//Палитра
colors.default = #1048B0
colors.white   = #fff
colors.text    = #70799f
colors.bg      = #6667DA
colors.bg2     = #E28CDE
colors.bg3     = #F8FAFC
colors.border  = #000

// Путь
paths = "../assets/"

// Шрифтовые стили
fonts.pt-sans = font-stack("PT Sans", sans-serif)

text.sans-body = {
  font-family: fonts.pt-sans,
  font-size: 16px,
  line-height: 1.3
}

webfonts.pt-sans-regular = {
  font-family: "PT Sans",
  font-file: "regular.%s",
  font-style: normal,
  font-weight: normal
}

webfonts.pt-sans-italic = {
  font-family: "PT Sans",
  font-file: "italic.%s",
  font-style: italic,
  font-weight: normal
}

webfonts.pt-sans-bold = {
  font-family: "PT Sans",
  font-file: "bold.%s",
  font-style: normal,
  font-weight: bold
}

webfonts.pt-sans-italic-bold = {
  font-family: "PT Sans",
  font-file: "bold-italic.%s",
  font-style: italic,
  font-weight: bold
}