+media(any)

  .responder
    position: relative
    padding-top: 105px
    padding-left: 50px
    padding-right 50px
    box-sizing: border-box
    &__img
      display: block
      centered: true
      margin-top: 50px
      max-width: 100%
      height: auto
    &__subtitle, &__txt
      @extend .center
    &__subtitle
      font-size: 30px
      line-height: 1.3
      font-weight: bold
    &__txt
      font-size: 22px
      line-height: 1.7
      color: #70799f
      strong
        font-size: 30px
        color: #000


+media(mq.tablet)

  .responder
    padding-top: 67px
    &__txt
      font-size: 20px
      strong
        font-size: 28px


+media(mq.phone)

  .responder
    padding-top: 64px
    padding-left: 20px
    padding-right 20px
    &__txt
      font-size: 16px
      strong
        font-size: 20px