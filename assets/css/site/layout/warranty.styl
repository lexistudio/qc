+media(any)

  .warranty
    padding-top: 118px
    &__box
      padding: 52px 0 40px
    &__title
      color: #1e1e1e
      font-weight: bold
      font-size: 20px
      line-height: 1.3
    &__txt
      color: #70799f
      font-size: 15px
      line-height: 1.8
      padding-top: 5px
      padding-right: 20px
    &__item
      padding-top: 30px
      padding-left: 42px
      &:first-child
        padding-top: 0
    &__icon
      float: left
      margin: 0 0 0 -42px
      font-size: 23px
      line-height: 1


+media(mq.tablet)

  .warranty
    padding-top: 79px


+media(mq.phone)

  .warranty
    padding-top: 62px
    &__box
      padding: 20px 0 40px
    &__title
      font-size: 18px
    &__txt
      font-size: 16px
      line-height: 1.5
      padding-right: 20px
    &__item
      padding-top: 20px
      padding-left: 30px
    &__icon
      margin: 2px 0 0 -30px
      font-size: 18px
    .btn
      width: 100%
