+media(any)

  .warranty
    padding-top: 118px
    &__box
      padding: 52px 0 40px
    &__title
      color: #1e1e1e
      font-weight: bold
      font-size: 20px
      line-height: 1.3
    &__txt
      color: #70799f
      font-size: 15px
      line-height: 1.8
      padding-top: 5px
      padding-right: 20px
    &__item
      padding-top: 30px
      padding-left: 42px
      &:first-child
        padding-top: 0
    &__icon
      float: left
      margin: 0 0 0 -42px
      font-size: 23px
      line-height: 1

  .warranty-detail
    display: flex
    margin: 28px -10px 0
    position: relative
    z-index: 2
    &__item
      @extend .box-shadow
      flex: 1
      padding: 18px
      margin: 0 10px
      background: linear-gradient(to bottom, colors.white, darken(colors.white, 3%))
      color: colors.text
      border-radius: 5px
      color: colors.text
      position: relative
      background-clip: padding-box
      border: 1px solid transparent
      &:before
        content: ""
        position: absolute
        top: 0
        bottom: 0
        left: 0
        right: 0
        background: linear-gradient(to right, colors.bg, colors.bg2)
        z-index: -1
        border-radius: 5px
        margin: -1px


+media(mq.tablet)

  .warranty
    padding-top: 79px


+media(mq.phone)

  .warranty
    padding-top: 62px
    &__box
      padding: 20px 0 40px
    &__title
      font-size: 18px
    &__txt
      font-size: 16px
      line-height: 1.5
      padding-right: 20px
    &__item
      padding-top: 20px
      padding-left: 30px
    &__icon
      margin: 2px 0 0 -30px
      font-size: 18px
    .btn
      width: 100%

  .warranty-detail
    display: block
    &__item
      margin-top: 20px
      &:first-child
        margin-top: 0
