+media(any)

  .chat
    position: relative
    z-index: 99999
    &__btn
    &__box
      position: fixed
      bottom: 40px
      right: 40px
    &__btn
      cursor: pointer
      width: 60px
      height: 60px
      &:before
      &:after
        content: ""
        position: absolute
        top: 0
        bottom: 0
        left: 0
        right: 0
        pointer-events: none
        background: rgba(colors.bg, .4)
        border-radius: 100%
        animation: chat 1.5s infinite
        animation-fill-mode: both
      div
        @extend .flex, .flex-center, .flex-align-items, .btn, .btn--primary, .btn--small
        position: absolute
        top: 0
        bottom: 0
        left: 0
        right: 0
        border-radius: 100%
        z-index: 2
        padding: 0
        min-width: 1px
        font-size: 30px
      &:after
        animation-delay: .4s
      i
        position: relative
        z-index: 2
    &__box
      @extend .box-shadow
      background: colors.white
      width: 340px
      border-radius: 10px
      top: 0
      margin-top: 80px
    &__close
      @extend .box-shadow-four, .flex, .flex-center, .flex-align-items
      width: 20px
      height: 20px
      background: colors.white
      font-size: 14px
      line-height: 1
      border-radius: 100%
      position: absolute
      top: -10px
      left: -10px
      cursor: pointer
    &__head
      @extend .flex, .flex-align-items, .flex-center
      height: 50px
      background: linear-gradient(55deg, colors.bg, colors.bg2)
      border-radius: 10px 10px 0 0
      color: colors.white
      text-align: center
      font-size: 20px
      line-height: 1
      font-weight: bold
    &__body
      position: absolute
      top: 50px
      bottom: 50px
      left: 0
      right: 0
      box-sizing: border-box
      padding: 20px
      overflow-x: hidden
      overflow-y: auto
      -webkit-overflow-scrolling: touch
    &__mess
      &-item
        margin-top: 20px
        font-size: 14px
        line-height: 1.3
        font-weight: 300
        &:first-child
          margin-top: 0
        span
          display: inline-block
          padding: 5px 15px
          background: rgba(#000, .1)
          border-radius: 30px
        &.active
          text-align: right
          span
            background: colors.bg
            color: colors.white
            text-align: left
    &__fields
      position: absolute
      bottom: 0
      left: 0
      right: 0
      height: 50px
      border-top: 1px solid rgba(#000, .1)
    &__field
      appearance: none
      box-sizing: border-box
      padding: 0 20px
      height: 50px
      display: block
      width: 100%
      border: none
      background: none
      font-size: 14px
    &__send
      appearance: none
      box-sizing: border-box
      background: none
      border: none
      border-radius: 0
      position: absolute
      top: 0
      right: 20px
      bottom: 0
      color: rgba(#000, .5)

  @keyframes chat
    from
      transform: scale(1)
    to
      transform: scale(1.7)
      opacity: 0
