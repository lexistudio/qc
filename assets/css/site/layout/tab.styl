+media(any)

  .tab
    @extend .flex, .flex-center
    position:  relative
    z-index: 2
    &__box
      @extend .box-shadow, .flex
      padding: 5px
      border-radius: 50px
      background: rgba(colors.white, .1)
      backdrop-filter: blur(25px)
    &__item
      @extend .center
      min-width: 70px
      color: #5f5f5f
      border-radius: 50px
      padding: 11px 31px
      margin-left: 5px
      cursor: pointer
      font-size: 14px
      line-height: 1.3
      transition: color .1s, background .1s
      &:first-child
        margin-left: 0
      &:hover
        background: lighten(colors.bg, 97%)
      &.active
        color: colors.white
        background: linear-gradient(55deg, colors.bg, 25%, colors.bg2)

  @supports not (backdrop-filter: blur(25px))
    .tab__box
      background: colors.white


+media(mq.tablet)

  .tab
    &__box
      padding: 5px
    &__item
      padding: 7px 20px