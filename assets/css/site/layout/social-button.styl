+media(any)

  .social-button
    @extend .box-shadow
    position: fixed
    bottom: 90px
    right: 20px
    background: linear-gradient(55deg, colors.bg, colors.bg2)
    width: 50px
    height: 50px
    border-radius: 100%
    display: flex
    justify-content: center
    align-items: center
    text-decoration: none
    color: #fff
    font-size: 22px
    &:hover
      background: linear-gradient(55deg, darken(colors.bg, 25%), colors.bg2)