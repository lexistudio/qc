+media(any)

  .nav-btn
  .nav-phone
    display: none

  .nav
    @extend .flex, .list-style
    &__li
      margin-left: 30px
      &:first-child
        margin-left: 0
    &__a
      @extend .text-decoration, .flex, .flex-align-items
      color: rgba(#000, .5)
      font-size: 15px
      line-height: 1.3
      transition: color .1s
      height: 70px
      border-bottom: 1px solid rgba(#000, 0)
      transition: border-bottom .1s
      &:hover, &.active
        border-color: rgba(#000, .7)


+media(mq.tablet)

  .nav
    &__li
      margin-left: 20px
    &__a
      font-size: 14px
      height: 50px


+media(mq.phone)

  .nav-btn
    margin: auto
    position: absolute
    top: 0
    bottom: 0
    right: 20px
    cursor: pointer
    background: linear-gradient(top, #000 2px, transparent 4px)
    background-size: auto 6px
    width: 20px
    height: 15px
    display: block
    &.active
      transform: rotate(90deg)

  .nav
    display: none

  .nav-phone
    @extend .box-shadow
    display: block
    position: absolute
    top: 100%
    left: 0
    right: 0
    background: colors.bg3
    box-sizing: border-box
    padding: 15px 20px
    margin-top: 1px
    &__ul
      list-style: none
      li
        margin-top: 10px
        &:first-child
          margin-top: 0
      a
        text-decoration: none
        color: rgba(#000, .5)
        font-size: 15px
        display: block
        padding-bottom: 10px
        border-bottom: 1px solid rgba(#000, .06)
        &.active
          color: rgba(#000, .7)
          border-color: rgba(#000, .5)
      span
        display: block
    &__info
      padding-top: 20px
      a
        display: block
        text-decoration: none
        color: rgba(#000, .7)
        padding: 10px 0
        text-transform: uppercase
        font-size: 22px
        line-height: 1
        font-weight: bold
        text-align: center
      span
        display: block
        font-size: 14px
        margin-bottom: 10px
        text-transform: none
        font-weight: normal
        color: rgba(#000, .5)