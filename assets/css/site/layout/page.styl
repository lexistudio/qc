+media(any)

  *
    outline: none

  img
    user-select: none

  a
    color: colors.bg
    &:hover
      text-decoration: none

  body, html
    height: 100%
    background: colors.bg3
    text-style: text.sans-body

  .wrapper
    min-height: 100vh
    min-width: 320px
    &__box
      min-height: calc(100vh - 362px)
      box-sizing: border-box
      position: relative
      padding-bottom: 181px

  .grid:before
    content: ""
    width: 1170px
    margin: auto
    position: fixed
    top: 0
    bottom: 0
    left: 0
    right: 0
    z-index: 99999
    background: linear-gradient(left, rgba(255,0,0,.1) 70px, transparent 70px)
    background-size: 100px
    pointer-events: none

  .container
    width: 1170px
    centered: true
    padding: 0 20px

  .title-box
    padding-top: 84px

  .title
    font-size: 40px
    line-height: 1.3
    padding-top: 7px
    font-weight: bold
    color: #1e1e1e

  .title-sub
    color: #8c8c8c
    font-size: 16px
    line-height: 1.3

  .title-small
    font-size: 27px
    line-height: 1.3
    font-weight: bold
    color: #1e1e1e

  .title-work
    color: rgba(#000, .7)
    font-size: 42px
    line-height: 1.7
    font-weight: bold
  
  .title-work-head
    padding-top: 30px

  .title-card
    color: rgba(#000, .7)
    font-size: 32px
    line-height: 1.4
    font-weight: bold
    padding: 5px 0

  .img-main
    display: block
    centered: true
    max-width: 100%
    height: auto

  .success
    background: rgba(green, .1)
    border: 1px solid rgba(green, .3)
    padding: 15px
    font-size: 14px
    line-height: 1.3
    color: rgba(green, .8)
    margin-top: 20px

  .fade-enter-active
  .fade-leave-active
    transition: opacity .7s

  .fade-enter
  .fade-leave-to
    opacity: 0


+media(mq.desktop)

  .container
    width: 980px

  .title-card
    font-size: 25px


+media(mq.tablet)

  .wrapper
    &__box
      padding-bottom: 90px

  .container
    width: 723px

  .title-box
    padding-top: 55px

  .title
    font-size: 30px
    padding-top: 0

  .img-main
    display: none

  .title-work
    font-size: 32px
    line-height: 1.3


+media(mq.phone)

  .wrapper
    &__box
      padding-bottom: 77px

  .container
    width: 100%
    box-sizing: border-box
    padding: 0 10px

  .title-box
    padding-top: 48px

  .title
    font-size: 24px

  .title-small
    font-size: 24px

  .title-work-head
    padding-top: 20px

  .title-work
    font-size: 28px

  .title-card
    font-size: 20px
    padding-bottom: 0
