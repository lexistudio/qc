+media(any)

  .head
    position: relative
    overflow: hidden
  
  .head-img
    @extend .flex, .flex-align-items, .flex-right
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    pointer-events: none
    img
      display: block
      margin-right: -60px

  .head-top
    border-bottom: 1px solid rgba(#000, .06)
    position: relative
    z-index: 6
    background: colors.bg3

  .head-box
    @extend .flex, .flex-space-between, .flex-align-items
    height: 70px

  .head-banner
    @extend .flex, .flex-align-items
    height: 75vh
    min-height: 600px
    max-height: 750px
    color: colors.text
    position: relative
    box-sizing: border-box
    padding-bottom: 50px

  .banner-main-subtitle
  .banner-main-title
    line-height: 1.3
  
  .banner-main-subtitle
    font-size: 23px
    padding-bottom: 20px
    color: rgba(#000, .3)
  
  .banner-main-title
    font-size: 52px
    font-weight: bold
    color: rgba(#000, .8)
    max-width: 460px
    line-height: 1.2
  
  .banner-main-text
    font-size: 17px
    line-height: 1.6
    max-width: 460px
    padding: 27px 0 35px
    color: rgba(#000, .3)

  .head-fixed
    @extend .box-shadow
    position: fixed
    top: 0
    left: 0
    right: 0
    background: rgba(colors.bg3, .7)
    z-index: 5
    border-bottom: 1px solid rgba(#000, .06)
    backdrop-filter: blur(50px)
    opacity: 0
    transform: translateY(-100%)
    transition: opacity .2s, transform .2s
    &.active
      opacity: 1
      transform: translateY(0)

  @supports not (backdrop-filter: blur(50px))
    .head-fixed
      background: colors.bg3

  .head-fixed-box
    @extend .flex, .flex-space-between, .flex-align-items
    height: 50px
  
  .head-fixed-menu
    @extend .flex
    &__item
      margin-left: 30px
      &:first-child
        margin-left: 0
    &__a
      display: inline-block
      text-decoration: none
      font-size: 15px
      line-height: 1
      color: rgba(#000, .5)
      &:hover, &.active
        color: colors.bg

  .head-fixed-contacts
    &__a
      display: inline-block
      text-decoration: none
      font-size: 15px
      line-height: 1
      color: rgba(#000, .5)
      margin-left: 30px
      font-weight: bold
      &:first-child
        margin-left: 0
      &:hover, &.active
        color: colors.bg


+media(mq.desktop)

  .head-img
    img
      width: 670px

  .banner-main-subtitle
    font-size: 20px
  
  .banner-main-title
    font-size: 45px
  
  .banner-main-text
    font-size: 16px
    max-width: 430px


+media(mq.tablet)

  .head-box
    height: 50px

  .head-img
    img
      width: 530px
      margin-right: -40px

  .banner-main-subtitle
    font-size: 16px
  
  .banner-main-title
    font-size: 40px
    max-width: 300px
  
  .banner-main-text
    font-size: 14px
    max-width: 310px

  .head-banner
    min-height: 500px
    max-height: 500px
    padding-bottom: 0

  .head-fixed
    display: none


+media(mq.phone)

  .head
    overflow: visible

  .head-img
    display: none

  .banner-main-subtitle
    font-size: 14px
  
  .banner-main-title
    font-size: 27px

  .head-banner
    min-height: 370px
    max-height: 370px
