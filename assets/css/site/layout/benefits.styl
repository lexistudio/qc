+media(any)

  .benefits
    padding-top: 20px

  .benefits-box
    @extend .flex, .flex-center
    padding-top: 60px
    &__item
      @extend .center
      width: 370px
      margin-left: 30px
      box-sizing: border-box
      padding: 0 30px
      &:first-child
        margin-left: 0
    &__icon
      @extend .box-shadow
      background: #fff
      border-radius: 100%
      width: 200px
      height: 200px
      centered: true
      position: relative
      img
        display: block
        border-radius: 100%
        margin: auto
        position: absolute
        top: 0
        bottom: 0
        left: 0
        right: 0
    &__title
      font-size: 22px
      line-height: 1.3
      font-weight: bold
      padding-top: 23px
    &__txt
      font-size: 16px
      line-height: 1.7
      padding-top: 10px
      color: rgba(#000, .5)

  .benefits-two
    padding-top: 52px
    &__txt
      font-size: 15px
      line-height: 1.8
      color: #70799f
      padding: 30px 0
    &__ul
      list-style: none
      padding-bottom: 40px
      i
        color: colors.bg
        font-size: 16px
        margin: 6px -30px
        display: block
        float: left
      li
        padding-top: 9px
        font-size: 15px
        line-height: 1.8
        color: #70799f
        padding-left: 30px
        &:first-child
          padding-top: 0


+media(mq.tablet)

  .benefits-box
    padding-top: 35px
    &__item
      width: 231px
      margin-left: 15px
      padding: 0 15px
    &__icon
      width: 150px
      height: 150px
      img
        max-width: 80%
        height: auto
    &__title
      font-size: 20px
      padding-top: 23px
    &__txt
      font-size: 14px
      padding-top: 10px


+media(mq.phone)

  .benefits-box
    flex-direction: column
    padding-top: 35px
    &__item
      width: 100%
      margin-left: 0
      padding: 0
      margin-top: 30px
      &:first-child
        margin-top: 0
    &__icon
      width: 120px
      height: 120px
    &__txt
      font-size: 16px
      max-width: 200px
      centered: true

  .benefits-two
    .btn
      width: 100%