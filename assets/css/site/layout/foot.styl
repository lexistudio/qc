+media(any)

  .foot
    background: rgba(255,255,255,.5)
    border-top: 3px solid darken(#F5F7FA, 1.5%)

  .copyright
    padding: 22px 0
    display: flex
    align-items: center
    justify-content: space-between
    color: rgba(0,0,0,.5)
    .logo
      text-decoration: none !important
    a
      color: inherit
      text-decoration: none
      &:hover
        text-decoration: underline
