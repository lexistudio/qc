+media(any)

  .delivery-main
    padding-top: 10px
    position:  relative
    &:before
      content: ""
      position: absolute 
      top: 130px
      left: 0
      right: 0
      background: url("~assets/img/russian2.png") no-repeat bottom center
      background-size: auto 100%
      height: 620px
      pointer-events: none
  
  .delivery-tab
    padding-top: 60px

  .delivery
    @extend .flex, .flex-center, .box-shadow
    padding: 30px 0
    background: rgba(colors.white, .1)
    max-width: 740px
    margin: 70px auto 0
    border-radius: 50px
    backdrop-filter: blur(25px)
    position: relative
    z-index: 2
    &__item
      padding: 30px 60px
      box-sizing: border-box
      flex: 1
      &:first-child
        border-right: 1px solid rgba(#000, .2)
    &__title
      font-size: 27px
      line-height: 1.3
      font-weight: bold
      padding-top: 30px
      &:first-child
        padding-top: 0
    p
      color: colors.text
      font-size: 15px
      line-height: 1.8
      padding-top: 5px
      padding-right: 20px

  @supports not (backdrop-filter: blur(25px))
    .delivery
      background: #fff


+media(mq.tablet)

  .delivery-main
    &:before
      height: 430px
  
  .delivery-tab
    padding-top: 32px

  .delivery
    padding: 20px 0
    margin-top: 40px
    &__item
      padding-left: 40px
      padding-right: 40px
    &__title
      font-size: 22px
    p
      font-size: 14px
      line-height: 1.5
      padding-top: 10px


+media(mq.phone)

  .delivery-main
    &:before
      display: none

  .delivery
    padding: 0
    margin-top: 20px
    border-radius: 0
    backdrop-filter: blur(0)
    flex-direction: column
    box-shadow: none
    &__item
      padding: 0
      &:first-child
        order: 2
    &__title
      font-size: 18px
      padding-top: 15px
      &:first-child
        padding-top: 15px
    p
      font-size: 16px
