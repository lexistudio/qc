+media(any)

  .contacts-wrapper
    padding-top: 18px

  .title-contacts
    font-size: 18px
    line-height: 1.3
    font-weight: bold
    padding-top: 30px

  .contacts
    @extend .box-shadow
    background: rgba(colors.white, .3)
    width: 350px
    padding: 30px
    border-radius: 10px
    backdrop-filter: blur(25px)
    &__title
      font-size: 20px
      line-height: 1.3
      font-weight: bold
    &__item
      padding-top: 20px
      &:first-child
        padding-top: 0
    &__ul
      list-style: none
      margin-top: 5px
      line-height: 1.3
    &__li
      margin-top: 3px
  
  @supports not (backdrop-filter: blur(25px))
    .contacts
      background: #fff


+media(mq.phone)

  .contacts
    box-shadow: none
    background: none
    width: 100%
    padding: 0
    border-radius: 0
    margin-top: 20px
    &__title
      font-size: 18px