+media(any)

  .request-progress
    background: darken(#f5f7fa, 3%)
    &__bar
      width: 40px
      height: 30px
      color: #fff
      background: linear-gradient(55deg, darken(colors.bg, 35%), darken(colors.bg2, 35%))
      padding: 0 10px
      box-sizing: border-box
      font-size: 16px
      line-height: 30px
      text-align: right
      transition: width 1s
      &--33
        width: 33%
      &--56
        width: 56%
      &--78
        width: 78%
      &--95
        width: 95%
      &--100
        width: 100%

  .request
    width: 750px
    margin: auto

  .request-title
    font-size: 30px
    font-weight: bold
    line-height: 1.3
    padding: 30px 0 0
    color: rgba(0,0,0,.7)

  .request-sub-title
    font-size: 16px
    line-height: 1.3
    padding: 10px 0 0
    color: #70799f