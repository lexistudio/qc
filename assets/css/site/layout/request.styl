+media(any)

  .request
    display: flex
    justify-content: space-between
    margin-top: 25px
    align-items: flex-start
    &__steps
      width: calc(100% - 400px)
    &__result
      @extend .box-shadow
      width: 370px
      background: linear-gradient(to bottom, colors.white, darken(colors.white, 3%))
      border-radius: 10px
      padding: 20px
      box-sizing: border-box
      p, ul
        color: colors.text
      p
        padding: 15px 0 0
      ul
        padding: 5px 0 0
        list-style: none

  .request-progress
    background: darken(colors.bg3, 3%)
    width: 100%
    position: absolute
    bottom: 0
    left: 0
    right: 0
    &__bar
      width: 0%
      height: 20px
      color: #fff
      background: linear-gradient(55deg, darken(colors.bg, 35%), darken(colors.bg2, 35%))
      box-sizing: border-box
      text-align: right
      transition: width 1s
      span
        display: block
        padding: 0 6px
        font-size: 12px
        line-height: 20px

  .request-title
    font-size: 18px
    line-height: 1.3
    font-weight: bold

  .request-label-box
    display: flex
    padding: 10px 0
    flex-wrap: wrap
    justify-content: space-between
    .request-label
      width: calc(50% - 10px)
      margin: 10px 0

  .request-label
    display: block
    cursor: pointer
    user-select: none
    input
      display: none
    span
      @extend .box-shadow
      border-radius: 5px
      padding: 10px
      display: block
      background: linear-gradient(to bottom, colors.white, darken(colors.white, 3%))
      color: colors.text
      &:hover
        background: linear-gradient(to bottom, colors.white, darken(colors.white, 7%))
    input:checked + span
      color: #fff
      background: linear-gradient(55deg, darken(colors.bg, 35%), darken(colors.bg2, 35%))