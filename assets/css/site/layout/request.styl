+media(any)

  .request-progress
    background: darken(#f5f7fa, 3%)
    &__bar
      width: 0%
      height: 20px
      color: #fff
      background: linear-gradient(55deg, darken(colors.bg, 35%), darken(colors.bg2, 35%))
      box-sizing: border-box
      text-align: right
      transition: width 1s
      span
        display: block
        padding: 0 6px
        font-size: 12px
        line-height: 20px

  .request
    width: 750px
    margin: auto

  .request-title
    font-size: 30px
    font-weight: bold
    line-height: 1.3
    padding: 30px 0 0
    color: rgba(0,0,0,.7)

  .request-sub-title
    font-size: 16px
    line-height: 1.3
    padding: 10px 0 0
    color: #70799f