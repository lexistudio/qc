+media(any)

  .search
    margin-top: 20px
    position: relative

  .filter
    list-style: none
    display: flex
    flex-wrap: wrap
    margin-top: 10px
    position: relative
    z-index: 3
    &__name
      display: inline-block
      font-size: 15px
      line-height: 1.3
      color: colors.bg
      cursor: pointer
      position: relative
      padding-right: 15px
      &:before
        content: ""
        width: 0
        height: 0
        border-top: 5px solid colors.bg
        border-left: 5px solid transparent
        border-right: 5px solid transparent
        margin: auto
        position: absolute
        top: 3px
        right: 0
        bottom: 0
      &.active
        padding-right: 0
        &:before
          display: none
    &__li
      margin-top: 5px
      margin-right: 30px
      position: relative
      &:last-child
        .filter__name
          padding-right: 15px
          &:before
            display: block
        .filter-two
          left: auto
          right: 0
          &:before
            left: auto
            right: 15px
      &:hover
        .filter-two
          opacity: 1
          transform: translateY(0)
          pointer-events: auto

  .filter-two
    @extend .box-shadow
    list-style: none
    position: absolute
    top: 100%
    left: 0
    background: #fff
    padding: 10px 15px
    width: 150px
    margin-top: 10px
    border-radius: 10px
    opacity: 0
    transform: translateY(10px)
    pointer-events: none
    transition: opacity .2s, transform .2s
    z-index: 2
    &:before, &:after
      content: ""
    &:before
      width: 0
      height: 0
      border-bottom: 7px solid #fff
      border-left: 7px solid transparent
      border-right: 7px solid transparent
      position: absolute
      top: -7px
      left: 15px
      right: 0
    &:after
      position: absolute
      top: -10px
      left: 0
      right: 0
      height: 10px
    &__name
      font-size: 15px
      line-height: 1.3
      display: block
      margin: 5px 0

  .filter-btn
    display: none


+media(mq.phone)

  .filter
    display: block
    box-shadow: 0 10px 10px 0 rgba(0 0 0, .07)
    background: #fff
    display: none
    &.active
      display: block
    &__name
      display: block
      font-size: 14px
      padding: 10px 10px
      padding-right: 0
    &__li
      margin-right: 0
      display: block
      margin-top: 0
      border-top: 1px solid rgba(0,0,0,.07)
      &:first-child
        border-top: none
      &:last-child
        .filter__name
          padding-right: 0
      &:hover
        .filter-two
          opacity: 1
          transform: translateY(0)
          pointer-events: auto

  .filter-two
    position: static
    padding: 10px 30px 30px
    width: 100%
    margin-top: 0
    border-radius: 0
    box-shadow: none
    opacity: 1
    transform: translateY(0)
    box-sizing: border-box
    &__name
      font-size: 15px
      line-height: 1.3
      display: block
      margin: 5px 0
    &__li
      position: relative
      &:before, &:after
        content: ""
        position: absolute
        background: rgba(0,0,0,.2)
        right: 100%
      &:before
        margin: auto
        top: 0
        bottom: 0
        width: 10px
        height: 1px
        margin-right: 10px
      &:after
        width: 1px
        height: 25px
        bottom: 100%
        margin-right: 20px
        margin-bottom: -10px

  .filter-btn
    display: block
    font-size: 14px
    text-align: center
    padding: 10px
    background: #fff
    box-shadow: 0 10px 10px 0 rgba(0 0 0, .07)
    color: colors.bg
    cursor: pointer
    margin-top: 10px